# ===========================================
# SARS eFiling
# ===========================================
# SARS_SANDBOX=false
# SARS_CLIENT_ID=
# SARS_CLIENT_SECRET=

# ===========================================
# AI AGENTS & EMBEDDINGS (REQUIRED for AI features)
# ===========================================
# Claude API via Requesty.ai proxy
ANTHROPIC_API_KEY=<your-requesty-api-key>
ANTHROPIC_BASE_URL=https://router.requesty.ai/v1
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Agent SDK configuration
SDK_DISABLED=false
SDK_MODEL_CATEGORIZER=haiku
SDK_MODEL_MATCHER=haiku
SDK_MODEL_SARS=sonnet

# Ruvector (Vector DB for AI memory)
RUVECTOR_ENABLED=true
RUVECTOR_PG_EXTENSION=true
RUVECTOR_EMBEDDING_DIM=384
RUVECTOR_ENABLE_SONA=true

# SONA Learning (adaptive AI)
SONA_BOOTSTRAP_ENABLED=true

