# Database
DATABASE_URL="postgresql://user:password@localhost:5432/crechebooks"

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for form submissions and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password
SMTP_FROM=hello@crechebooks.co.za

# Support Email
SUPPORT_EMAIL=hello@crechebooks.co.za

# Frontend URL (for email links)
FRONTEND_URL=https://crechebooks.co.za

# Optional: For local development
# FRONTEND_URL=http://localhost:3000

# Xero Configuration (if needed)
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=https://api.elleelephant.co.za/xero/callback

# AI Agent SDK (Claude via Requesty.ai proxy)
ANTHROPIC_API_KEY=your-requesty-api-key
ANTHROPIC_BASE_URL=https://router.requesty.ai/v1
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Application
NODE_ENV=production
PORT=3001

# Swagger API Documentation
# SWAGGER_ENABLED: Set to 'true' to enable docs in production (enabled by default in development)
# SWAGGER_USER / SWAGGER_PASSWORD: Required in production for Basic Auth protection
SWAGGER_ENABLED=false
SWAGGER_USER=
SWAGGER_PASSWORD=

# ── Agent SDK (via agentic-flow) ─────────────────────────────────────
SDK_DISABLED=false
SDK_MODEL_CATEGORIZER=haiku
SDK_MODEL_MATCHER=haiku
SDK_MODEL_SARS=sonnet
SDK_MODEL_EXTRACTION=haiku
SDK_MODEL_ORCHESTRATOR=sonnet
SDK_MODEL_CONVERSATIONAL=sonnet
SDK_MAX_TOKENS=1024
SDK_TEMPERATURE=0

# ── Optional Multi-Model Routing (agentic-flow) ─────────────────────
# GOOGLE_AI_KEY=AIza...
# OPENROUTER_API_KEY=sk-or-...
# SDK_PROVIDER_CATEGORIZER=anthropic
# SDK_PROVIDER_MATCHER=anthropic
# SDK_PROVIDER_SARS=anthropic
# SDK_PROVIDER_EXTRACTION=anthropic
# SDK_PROVIDER_ORCHESTRATOR=anthropic
# SDK_PROVIDER_CONVERSATIONAL=anthropic

# ── Ruvector (Vector Database) ───────────────────────────────────────
# RUVECTOR_ENABLED=true
# RUVECTOR_PG_EXTENSION=false

# -- IntelligenceEngine (ruvector unified orchestration) -----------------
RUVECTOR_DATA_DIR=./data/ruvector
RUVECTOR_EMBEDDING_DIM=384
RUVECTOR_MAX_MEMORIES=100000
RUVECTOR_MAX_EPISODES=50000
RUVECTOR_ENABLE_SONA=true
RUVECTOR_ENABLE_ATTENTION=false
RUVECTOR_LEARNING_RATE=0.1

# -- SONA Bootstrap ─────────────────────────────────────────────────
# Enable automatic SONA bootstrapping from historical data on startup
SONA_BOOTSTRAP_ENABLED=true
