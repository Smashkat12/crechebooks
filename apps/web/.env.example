# CrecheBooks Web Application Environment Variables
# Copy this file to .env.local and fill in the values

# API Configuration
# For production
NEXT_PUBLIC_API_URL=https://api.elleelephant.co.za
NEXT_PUBLIC_SITE_URL=https://crechebooks.co.za

# For local development
# NEXT_PUBLIC_API_URL=http://localhost:3001
# NEXT_PUBLIC_SITE_URL=http://localhost:3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-min-32-chars-long

# OAuth Providers (optional - for production)
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=
# AUTH0_ISSUER=

# Google OAuth (optional - for production)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Feature Flags
NEXT_PUBLIC_ENABLE_DEV_LOGIN=true
