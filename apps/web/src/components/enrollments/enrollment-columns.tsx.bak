/**
 * Enrollment Table Column Definitions
 * REQ-BILL-009: Enrollment Register UI
 *
 * @description Defines columns for the enrollment DataTable:
 * - Child Name, Parent, Start Date, Fee Structure, Status, Actions
 */

import { ColumnDef } from '@tanstack/react-table';
import { EnrollmentStatus } from '@crechebooks/types';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuLabel,
  DropdownMenuSeparator,
  DropdownMenuTrigger,
} from '@/components/ui/dropdown-menu';
import { MoreHorizontal, Eye, Edit, UserX } from 'lucide-react';
import { EnrollmentStatus as EnrollmentStatusBadge } from '@/components/parents/enrollment-status';
import { formatDate, formatCurrency } from '@/lib/utils';

// Legacy types - this file is not used in TASK-BILL-019
type EnrollmentChild = Record<string, unknown>;
type ChildWithEnrollment = Record<string, unknown>;

interface EnrollmentActionsProps {
  child: EnrollmentChild | ChildWithEnrollment;
  onView?: (child: EnrollmentChild | ChildWithEnrollment) => void;
  onEdit?: (child: EnrollmentChild | ChildWithEnrollment) => void;
  onWithdraw?: (child: EnrollmentChild | ChildWithEnrollment) => void;
}

function EnrollmentActions({
  child,
  onView,
  onEdit,
  onWithdraw,
}: EnrollmentActionsProps) {
  const isActive = false; // Legacy code - disabled for TASK-BILL-019

  return (
    <DropdownMenu>
      <DropdownMenuTrigger asChild>
        <Button variant="ghost" className="h-8 w-8 p-0">
          <span className="sr-only">Open menu</span>
          <MoreHorizontal className="h-4 w-4" />
        </Button>
      </DropdownMenuTrigger>
      <DropdownMenuContent align="end">
        <DropdownMenuLabel>Actions</DropdownMenuLabel>
        <DropdownMenuSeparator />
        {onView && (
          <DropdownMenuItem onClick={() => onView(child)}>
            <Eye className="mr-2 h-4 w-4" />
            View Details
          </DropdownMenuItem>
        )}
        {onEdit && (
          <DropdownMenuItem onClick={() => onEdit(child)}>
            <Edit className="mr-2 h-4 w-4" />
            Edit Enrollment
          </DropdownMenuItem>
        )}
        {onWithdraw && isActive && (
          <>
            <DropdownMenuSeparator />
            <DropdownMenuItem
              onClick={() => onWithdraw(child)}
              className="text-destructive"
            >
              <UserX className="mr-2 h-4 w-4" />
              Withdraw Child
            </DropdownMenuItem>
          </>
        )}
      </DropdownMenuContent>
    </DropdownMenu>
  );
}

export interface EnrollmentColumnOptions {
  onView?: (child: EnrollmentChild | ChildWithEnrollment) => void;
  onEdit?: (child: EnrollmentChild | ChildWithEnrollment) => void;
  onWithdraw?: (child: EnrollmentChild | ChildWithEnrollment) => void;
}

/**
 * Columns for enrollment list (using EnrollmentChild type)
 */
export function getEnrollmentColumns(
  options: EnrollmentColumnOptions = {}
): ColumnDef<EnrollmentChild>[] {
  return [
    {
      accessorKey: 'first_name',
      header: 'Child Name',
      cell: ({ row }) => {
        const firstName = row.getValue('first_name') as string;
        const lastName = row.original.last_name;
        return (
          <div className="font-medium">
            {firstName} {lastName}
          </div>
        );
      },
    },
    {
      accessorKey: 'date_of_birth',
      header: 'Date of Birth',
      cell: ({ row }) => {
        const dob = row.getValue('date_of_birth') as string;
        return formatDate(new Date(dob));
      },
    },
    {
      accessorKey: 'parent',
      header: 'Parent',
      cell: ({ row }) => {
        const parent = row.getValue('parent') as { name: string; email: string };
        return (
          <div>
            <div className="font-medium">{parent.name}</div>
            <div className="text-sm text-muted-foreground">{parent.email}</div>
          </div>
        );
      },
    },
    {
      accessorKey: 'enrollment_status',
      header: 'Status',
      cell: ({ row }) => {
        const status = row.getValue('enrollment_status') as EnrollmentStatus | null;

        if (!status) {
          return <Badge variant="outline">Not Enrolled</Badge>;
        }

        return <EnrollmentStatusBadge status={status} />;
      },
    },
    {
      id: 'actions',
      cell: ({ row }) => (
        <EnrollmentActions
          child={row.original}
          onView={options.onView}
          onEdit={options.onEdit}
          onWithdraw={options.onWithdraw}
        />
      ),
    },
  ];
}

/**
 * Columns for detailed enrollment view (using ChildWithEnrollment type)
 */
export function getEnrollmentDetailColumns(
  options: EnrollmentColumnOptions = {}
): ColumnDef<ChildWithEnrollment>[] {
  return [
    {
      accessorKey: 'first_name',
      header: 'Child Name',
      cell: ({ row }) => {
        const firstName = row.getValue('first_name') as string;
        const lastName = row.original.last_name;
        return (
          <div className="font-medium">
            {firstName} {lastName}
          </div>
        );
      },
    },
    {
      accessorKey: 'current_enrollment',
      header: 'Fee Structure',
      cell: ({ row }) => {
        const enrollment = row.getValue('current_enrollment') as {
          fee_structure: { name: string; amount: number };
        } | null;

        if (!enrollment) {
          return <span className="text-muted-foreground">-</span>;
        }

        return (
          <div>
            <div className="font-medium">{enrollment.fee_structure.name}</div>
            <div className="text-sm text-muted-foreground">
              {formatCurrency(enrollment.fee_structure.amount)}/month
            </div>
          </div>
        );
      },
    },
    {
      id: 'start_date',
      header: 'Start Date',
      cell: ({ row }) => {
        const enrollment = row.original.current_enrollment;

        if (!enrollment) {
          return <span className="text-muted-foreground">-</span>;
        }

        return formatDate(new Date(enrollment.start_date));
      },
    },
    {
      id: 'enrollment_status',
      header: 'Status',
      cell: ({ row }) => {
        const enrollment = row.original.current_enrollment;

        if (!enrollment) {
          return <Badge variant="outline">Not Enrolled</Badge>;
        }

        return <EnrollmentStatusBadge status={enrollment.status} />;
      },
    },
    {
      accessorKey: 'parent',
      header: 'Parent',
      cell: ({ row }) => {
        const parent = row.getValue('parent') as { name: string; email: string };
        return (
          <div>
            <div className="font-medium">{parent.name}</div>
            <div className="text-sm text-muted-foreground">{parent.email}</div>
          </div>
        );
      },
    },
    {
      id: 'actions',
      cell: ({ row }) => (
        <EnrollmentActions
          child={row.original}
          onView={options.onView}
          onEdit={options.onEdit}
          onWithdraw={options.onWithdraw}
        />
      ),
    },
  ];
}
